<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
      <table class="table">
      <tr>
      <th>name</th>
      <th><%= @user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
      </tr>

      </table>

      <div class="row">
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
      </div>


      </table>
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <h4>Title</h4>
      <%= f.text_field :title %>
        <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' , class: 'btn btn-success' %>
      <% end %>
    </div>


   <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td>
      <%= attachment_image_tag book.user, :profile_image ,size: "40x40", farmat: 'jpg', fallback: "no_image.jpg" %>
     </td>
     <td>
      <%= link_to book.title, book_path(book) %>
     </td>
     <td>
      <%= book.body %>
     </td>
    </tr>
    <% end %>
  </tbody>
  </thead>
</table>
    </div>
</div>
</div>
