<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/f97bdf8bf2.js" crossorigin="anonymous"></script>

  </head>

  <body>

   <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
          <%= link_to root_path, class: "navbar-brand" do %>
          Bookers
          <% end %>
  　　　<button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
  　　<ul class="navbar-nav ml-auto">

  　　   <% if user_signed_in? %>


        <li>
          <%= link_to user_path(current_user.id), class: "fas fa-home nav-link text-light" do %>
             Home
          <% end %>
        </li>

        <li>
          <%= link_to users_path, class: "fas fa-link nav-link text-light" do %>
             Users
          <% end %>
        </li>

        <li><%= link_to books_path, class: "fas fa-user-plus nav-link text-light" do %>
             Books
            <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete, class: "fas fa-sign-in-alt nav-link text-light" do %>
            Logout
          <% end %>
        </li>

      </ul>
    </nav>

  <% else %>


        <li>
          <%= link_to root_path, class: "fas fa-home nav-link text-light" do %>
            Home
          <% end %>
        </li>

        <li>
          <%= link_to home_about_path, class: "fas fa-link nav-link text-light" do %>
            About
          <% end %>
        </li>

        <li>
          <%= link_to new_user_registration_path, class: "fas fa-user-plus nav-link text-light" do %>
            Sign up
          <% end %>
        </li>

        <li>
          <%= link_to new_user_session_path, class: "fas fa-sign-in-alt nav-link text-light" do %>
            Log in
          <% end %>
        </li>

      </ul>
    </nav>

  <% end %>


  </ul>
  </div>
   </div>
   </nav>
   </header>
   
  <% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
    <%= yield %>
<footer>
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
  　</div>
</footer>
  </body>
</html>
